{
    "require": {
        "robmorgan/phinx": "^0.12",
        "smarty/smarty": "^3.1.48",
        "riimu/kit-csrf": "^2.4",
        "symfony/http-foundation": "^3.4",
        "symfony/yaml": "^3.4",
        "ircmaxell/random-lib": "^1.2",
        "sentry/sentry": "^1.9.1",
        "phpmailer/phpmailer": "~6.1",
        "league/oauth2-client": "^2.4",
        "adodb/adodb-php": "^5.20",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^4.1",
        "vlucas/phpdotenv": "^5.4",
        "twilio/sdk": "^6.40",
        "endroid/qr-code": "^3.9"
    },

    "autoload": {
